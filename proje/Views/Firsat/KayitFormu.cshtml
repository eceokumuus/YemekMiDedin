@model proje.Models.FIRSAT

@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var mekan = ViewData["mekan"] as List<proje.Models.MEKAN>;
}

<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckfinder/ckfinder.js"></script>

<div>

    <form id="frm1" style="margin-left:15px;" method="post" action="~/Firsat/KayitFormu" class="form-horizontal">

        <div class="form-group">
            <div class="col-sm-2">@*Fırsat Id*@</div>
            <div class="col-sm-10"><input class="form-control" type="hidden" name="FIRSAT_ID" id="FIRSAT_ID" value="@Model.FIRSAT_ID" /></div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">Fırsat Adı</div>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="FIRSAT_ADI" id="EGITIM_ADI" value="@Model.FIRSAT_ADI" />
                @Html.ValidationMessageFor(m => m.FIRSAT_ADI)
            </div>


        </div>

        <div class="form-group">
            <div class="col-sm-2">Mekan Adı</div>
            <div class="col-sm-10">
                <select class="form-control" name="MEKAN_ID" id="MEKAN_ID">
                    @for (int i = 0; i < mekan.Count; i++)
                    {
                        if (mekan[i].MEKAN_ID == Model.MEKAN_ID)
                        {
                            <option selected value="@mekan[i].MEKAN_ID">@mekan[i].MEKAN_ADI</option>
                        }
                        else
                        {
                            <option value="@mekan[i].MEKAN_ID">@mekan[i].MEKAN_ADI</option>
                        }

                    }
                </select>
                @Html.ValidationMessageFor(m => m.MEKAN_ID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">Fırsat Detay</div>
            <div class="col-sm-10">

                <textarea class="form-control" name="FIRSAT_DETAY" id="FIRSAT_DETAY">
                        @Html.Raw(@Model.FIRSAT_DETAY)
                    </textarea>
                @Html.ValidationMessageFor(m => m.FIRSAT_DETAY)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">Nasıl Kullanılır?</div>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="NASIL_KULLANILIR" id="NASIL_KULLANILIR" value="@Model.NASIL_KULLANILIR" />
                @Html.ValidationMessageFor(m => m.NASIL_KULLANILIR)
            </div>

        </div>

        <div class="form-group">
            <div class="col-sm-2">Bitiş Tarihi</div>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="BITIS_TARIH" id="BITIS_TARIH" value="@Model.BITIS_TARIH" />
                @Html.ValidationMessageFor(m => m.BITIS_TARIH)
            </div>

        </div>

        <div class="form-group">
            <div class="col-sm-2">Bitiş Saati</div>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="BITIS_SAAT" id="BITIS_SAAT" value="@Model.BITIS_SAAT" />
                @Html.ValidationMessageFor(m => m.BITIS_SAAT)
            </div>

        </div>

        <div class="text-center">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a href="~/Firsat/Index" class="btn btn-danger">Vazgeç</a>
        </div>
    </form>

</div>

<script type="text/javascript">

    var editor = CKEDITOR.replace('FIRSAT_DETAY');
    CKFinder.setupCKEditor(editor, '/ckfinder/');

</script>
