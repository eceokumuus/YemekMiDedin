            <div class="baslik col-sm-offset-1 col-sm-6 text-center">
                Yemek Mi Dedin Yönetim Paneli
            </div>
            <div class="col-sm-offset-1 col-sm-4">
                <a class="pull-right" style="float:right;" href="~/SiteLogin/Logout">Oturumu Kapat</a>
                <span class="username pull-right" style="float:right;">Sevgi Ece </span>
            </div>
        </div>

        <div id="menu" class="menu row">
            <span id="menuyazi">MENU</span>
            <div id="tostmenu">
                <span class="cizgi"></span>
                <span class="cizgi"></span>
                <span class="cizgi"></span>
            </div>
            <ul>
                <li>
                    <a href="~/Anasayfa/Index">Anasayfa</a>
                </li>
                <li>
                    <a href="~/Mekan/Index">Mekanlar</a>
                </li>
                <li>
                    <a href="~/KategoriListe/Index">Kategoriler </a>
                    <ul>
                        <li><a href="~/AltKategoriListe/Index">Alt Kategoriler</a></li>
                    </ul>
                </li>
                <li>
                    <a href="~/Galeri/Index">Galeri</a>
                </li>
                <li>
                    <a href="~/Firsat/Index">Fırsatlar</a>
                    <ul>
                        <li><a href="~/FirsatGaleri/Index">Fırsat Galeri</a></li>
                    </ul>
                </li>

                <li>
                    <a href="~/Uye/Index">Uyeler</a>
                </li>

            </ul>
        </div>

        <div id="icerik" class="row">
            @RenderBody()
        </div>
    </div>
</body>
</html>
