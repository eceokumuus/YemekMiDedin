@model List<proje.Models.KATEGORI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string ara = "";
    if (Request["ara"] != null)
    {
        ara = Request["ara"].ToString();
    }
}

<div id="toolbar">
    <form id="frm1" method="post" action="~/KategoriListe/Ara" class="form-inline">
        <input type="text" name="txtAra" id="txtAra" value="@ara" class="form-control" placeholder="Kategori Adını Giriniz" />
        <input type="submit" value="Ara" class="btn btn-outline-dark" />
        <a href="~/KategoriListe/KayitFormu" class="btn btn-success">Yeni</a>
    </form>
</div>

<script>
    function SilOnay() {
        var sonuc = confirm("Kayıt Silinsin mi?");
        return sonuc;
    }
</script>
<div id="liste" class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th>Sil</th>
            <th>Düzenle</th>
            <th>Kategori Adı</th>
        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td> <a class="btn btn-danger" href="~/KategoriListe/Sil/@Model[i].KATEGORI_ID" onclick="return SilOnay();">Sil</a></td>
                <td> <a class="btn btn-info" href="~/KategoriListe/KayitFormu/@Model[i].KATEGORI_ID">Düzenle</a></td>
                <td>@Model[i].KATEGORI_ADI</td>
            </tr>
        }
    </table>
</div>
@Html.Partial("_Sayfalama")
