@model proje.Models.ALT_KATEGORI

@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var kategori = ViewData["kategori"] as List<proje.Models.KATEGORI>;
}
<div id="kayit">

    <form id="frm1" style="margin-left:15px;" method="post" action="~/AltKategoriListe/KayitFormu">

        <div class="form-group">
            <div class="col-sm-2">@*Alt Kategori Id*@</div>
            <div class="col-sm-10"><input class="form-control" type="hidden" name="ALT_KATEGORI_ID" id="ALT_KATEGORI_ID" value="@Model.ALT_KATEGORI_ID" /></div>
        </div>

        <div class="form-group">
            <div class="col-sm-8">Kategori Adı</div>
            <div class="col-sm-10">
                <select class="form-control" name="KATEGORI_ID" id="KATEGORI_ID">
                    @for (int i = 0; i < kategori.Count; i++)
                    {
                        if (kategori[i].KATEGORI_ID == Model.KATEGORI_ID)
                        {
                            <option selected id="selectedkategori" value="@kategori[i].KATEGORI_ID">@kategori[i].KATEGORI_ADI</option>
                        }
                        else
                        {
                            <option value="@kategori[i].KATEGORI_ID">@kategori[i].KATEGORI_ADI</option>
                        }
                    }
                </select>
                @Html.ValidationMessageFor(m => m.KATEGORI_ID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8">Alt Kategori Adı</div>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="ALT_KATEGORI_ADI" id="ALT_KATEGORI_ADI" value="@Model.ALT_KATEGORI_ADI" />
                @Html.ValidationMessageFor(m => m.ALT_KATEGORI_ADI)
            </div>
        </div>
        <div class="text-center">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a href="~/AltKategoriListe/Index" class="btn btn-danger">Vazgeç</a>
        </div>
    </form>

</div>
