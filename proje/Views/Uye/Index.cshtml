@model List<proje.Models.UYE>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string ara = "";
    if (Request["ara"] != null)
    {
        ara = Request["ara"].ToString();
    }
}

<div id="toolbar">
    <form id="frm1" method="post" action="~/Uye/Ara" class="form-inline">
        <input type="text" name="txtAra" id="txtAra" value="@ara" class="form-control" placeholder="Üye Adını Giriniz." />
        <input type="submit" value="Ara" class="btn btn-outline-dark" />
        <a href="~/Uye/KayitFormu" class="btn btn-success">Yeni</a>
    </form>
</div>
<script>
    function SilOnay() {
        var sonuc = confirm("Kayıt Silinsin mi?");
        return sonuc;
    }
</script>

<div id="liste" class="table-responsive">

    <table class="table table-striped table-hover table-bordered">

        <tr>
            <th>Sil</th>
            <th>Düzenle</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Kullanıcı Adı</th>
            <th>Şifre</th>
            <th>E-posta</th>
            <th>Telefon</th>
            <th>İl</th>
            <th>İlçe</th>
            <th>Durumu</th>

        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td><a class="btn btn-danger" href="~/Uye/Sil/@Model[i].UYE_ID" onclick="return SilOnay();">Sil</a></td>
                <td><a class="btn btn-info" href="~/Uye/KayitFormu/@Model[i].UYE_ID">Düzenle</a></td>
                <td>@Model[i].ADI</td>
                <td>@Model[i].SOYADI</td>
                <td>@Model[i].KULLANICI_ADI</td>
                <td>@Model[i].SIFRE</td>
                <td>@Model[i].EPOSTA</td>
                <td>@Model[i].TELEFON</td>
                <td>@Model[i].IL.IL_ADI</td>
                <td>@Model[i].ILCE.ILCE_ADI</td>
                <td>@Model[i].DURUMU</td>

            </tr>
        }
    </table>
</div>
@Html.Partial("_Sayfalama")

